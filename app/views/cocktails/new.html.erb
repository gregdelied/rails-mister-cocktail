<% content_for :title do %>Add a Cocktail<% end %>
<h3>Add a Cocktail</h3>
<div class="form">
  <%= form_for(@cocktail) do |form| %>
    <% if @cocktail.errors.any? %>
      <ul>
      <% @cocktail.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
    <br/>
    <br/>
    <%= form.submit 'Submit', class: 'submit' %>
  <% end %>
</div>

